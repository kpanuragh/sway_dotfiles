@define-color trans             rgba(28, 28, 28, 0);
@define-color black             #2f2f2f;
@define-color black-trans       @white;
@define-color blue              #437890;
@define-color blue-light        @blue;
@define-color yellow            #8d905f;
@define-color yellow-light      #fff8c5;
@define-color red               #755754;
@define-color green             #609075;
@define-color grey              #525050;
@define-color grey-light        #8e8e8e;
@define-color grey-trans        rgba(84, 85, 85, .60);
@define-color white             #b9bab5;
@define-color white-alt         #eaeef2;
@define-color white-alt-trans   rgba(234, 238, 242, .90);
@define-color white-lighter     #c9cac5;
@define-color white-light       @grey; 
@define-color orange            #9b885c;
@define-color purple            #6b6098;
@define-color turquoise         #6b6098;
* {
    border: none;
    border-radius: 0px;
    font-family: "Hasklig";
    font-size: 18px;
    min-height: 0;
    color: #E5E9F0;
}

window#waybar {
    background: #17a88b;
}

#window {
    padding: 0px 5px;
    font-size:0.8em;
    /*border-radius:50 */
}
#custom-jira-count {
   padding:10px;

}
#custom-teamwork {
  padding: 10px;
}
#custom-jira-count.Highest{
   color:#ff5630;
}
#custom-jira-count.High{
  color:#ff5630;
}
#custom-jira-count.Lowest {
  color:#0065ff;
}
#custom-jira-count.Low {
  color:#0065ff;
}
#custom-jira-count.Medium {
  color:#FFAB00;
}
#custom-spotify-metadata, #custom-spotify-play-pause, #custom-spotify-prev, #custom-spotify-next, #custom-spotify-quit {
    color:              #000000;
    padding:            0px 6px 0px 6px;
    font-size:          20px;
    font-weight: bold;
}
#custom-spotify-metadata {
    margin:             0px 0px 0px 1px;
}
#custom-spotify-metadata.playing {
    color:              @green;
}
#custom-spotify-metadata.paused {
    color:              @yellow;
}
#custom-spotify-prev {
    margin:             0px 0px 0px 1px;
}
#custom-spotify-play-pause {
    margin:             0px 0px 0px 1px;
}
#custom-spotify-next {
    margin:             0px 0px 0px 1px;
}
#custom-spotify-quit {
    margin:             0px 0px 0px 1px;
}


#workspaces, #clock, #custom-spotify, #window { 
    font-weight: 800;
}

#tray * {
    color: #ECEFF4;
    background-color: #44f135;
}

/* Workspace Buttons */
#workspaces button label{
    color: #ECEFF4;
    font-size: 30px;
    font-weight:bold;
    padding-left:10px;
    padding-right:10px;
}
#workspaces button.focused label {
    color: #ECEFF4;
}
#workspaces button.focused {
    background: #2E3440; 
}
#workspaces button:hover{
  background-color:#3B4252;
}
#mode {
    background-color: #fd472f;
    color: #E5E9F0;
}

#clock, #battery, #cpu, #memory, #network, #pulseaudio, #tray, #mode, #idle_inhibitor, #custom-sunpaper {
    padding:10px;
    /*border-radius:50*/
  
}
#custom-worktime {
    padding: 0 5px;

}
#custom_logo {
  padding: 0px 5px;
}
#clock {
    margin: 0;
    color: #E5E9F0;
}


#network.disconnected {
    color: #E5E9F0;
}


#pulseaudio.muted {
    color: #E5E9F0;
}
.custom-spotify {
    padding: 0 10px;
    margin: 0 4px;
    color: #E5E9F0;
    font-size: 10pt;
}
#custom-discord {
    background-color: greenyellow;
    color: #E5E9F0;
    border-radius: 50px;
    padding:5px;
}
#battery{
    color: #E5E9F0;
}
#memory{
    color: #E5E9F0;
}
#cpu{
    color: #E5E9F0;
}
#network{
    color:#E5E9F0;
}
#pulseaudio{
    color: #E5E9F0;
}
#custom-sunpaper{
  color:#E5E9F0;
}
#window{
    background-color: #434C5E;
    color: #E5E9F0;
}
